// It's used only for e2e tests
// Should mimic tsconfig.json
// The main differences are:
// - include = ['src'] because we need to compile src/e2e as well
// - module = "CommonJS" because cucumber uses require() internally
{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true
  },
  "include": ["src"],
  "typedocOptions": {
    "entryPoints": ["src"],
    "entryPointStrategy": "expand",
    "excludeNotDocumented": false,
    "out": "docs",
    "plugin": ["typedoc-plugin-missing-exports"]
  }
}
